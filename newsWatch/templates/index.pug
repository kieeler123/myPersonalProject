doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title 뉴스 검색
    link(rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}")

  body
    .search-container
      h1 뉴스 검색
      form(method="POST")
        input.search-box(type="text" name="query" placeholder="검색어 입력" value=query required)
        button.search-button(type="submit") 검색

    .news-container
      if news_results
        h2 "#{query}" 검색 결과
        each news in news_results
          .news-item
            a(href=news.url target="_blank")= news.title
            p.news-date #{news.date.strftime('%Y-%m-%d')}
      else
        if query
          p 검색 결과가 없습니다.